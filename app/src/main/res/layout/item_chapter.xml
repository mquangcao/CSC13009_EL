<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="28dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    app:cardElevation="1dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginStart="4dp"
            android:id="@+id/imgThumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/animal_king"
            />

        <TextView
            android:id="@+id/tvChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgThumbnail"
            android:layout_marginStart="16dp"
            android:text="Chapter 1"
            android:fontFamily="@font/baloo"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvVocabulary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvChapter"
            android:layout_toEndOf="@id/imgThumbnail"
            android:layout_marginStart="16dp"
            android:text="56 vocabulary words"
            android:textSize="14sp"
            android:fontFamily="@font/baloo"/>

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cpb_background_progressbar_color="#b6bbd8"
            app:cpb_background_progressbar_width="7dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#3f51b5"
            app:cpb_progressbar_width="6dp"
            app:cpb_round_border="true"
            app:cpb_progress="55"
            app:cpb_progress_max="100"
            app:cpb_progressbar_color_end="#FFAA33"
            app:cpb_background_progressbar_color_start="#EAEAEA"
            app:cpb_background_progressbar_color_direction="top_to_bottom"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />




    </RelativeLayout>

</androidx.cardview.widget.CardView>