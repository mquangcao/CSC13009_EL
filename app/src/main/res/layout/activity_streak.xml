<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grayLight"
    android:padding="16dp">

    <!-- Icon ngọn lửa -->
    <ImageView
        android:id="@+id/fireIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_fire"
        android:contentDescription="Fire Icon" />

    <!-- Số ngày streak -->
    <TextView
        android:id="@+id/streakCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fireIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="80sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:fontFamily="@font/roboto_slab" />

    <!-- Text "Ngày streak" -->
    <TextView
        android:id="@+id/streakTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/streakCountText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Ngày streak"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/orange"
        android:fontFamily="@font/roboto_slab" />

    <!-- CardView chứa lịch tuần và lời khích lệ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/streakTextLabel"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/beige"
        android:background="@drawable/cardview_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Lịch tuần -->
            <LinearLayout
                android:id="@+id/weekLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <!-- Ví dụ: Các ngày trong tuần -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_check_circle"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_check_circle"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_check_circle"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_check_circle"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_check_circle"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/ic_uncheck_circle"
                    />
            </LinearLayout>

            <!-- Lời khích lệ -->
            <TextView
                android:id="@+id/motivationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:text="Tuyệt vời! Liệu tuần tới bạn có thể đạt một tuần hoàn hảo không nhỉ?"
                android:textSize="16sp"
                android:textColor="@color/gray_dark"
                android:fontFamily="@font/roboto_slab"
                android:gravity="center" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Nút Tiếp tục -->
    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/cardWeek"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="TIẾP TỤC"
        android:textAllCaps="true"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_slab"
        android:textStyle="bold"
        app:cornerRadius="30dp" />
</RelativeLayout>
