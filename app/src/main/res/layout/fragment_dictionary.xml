<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".app.presentation.fragment.DictionaryFragment">

    <!-- Search Bar -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_search_bar"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:layout_toStartOf="@id/ivTagButton"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/ivSearchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_search"
            android:contentDescription="Search Icon"
            app:tint="@color/greenPrimary" />

        <AutoCompleteTextView
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search for words..."
            android:fontFamily="@font/baloo"
            android:background="@null"
            android:paddingHorizontal="8dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grayHint"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Save Button -->
    <ImageView
        android:id="@+id/ivTagButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_alignTop="@id/searchBar"
        android:layout_alignBottom="@id/searchBar"
        android:src="@drawable/ic_save"
        android:contentDescription="Tag Button"
        app:tint="@color/greenPrimary"
        android:background="@drawable/bg_circle_button"
        android:padding="8dp" />

    <!-- Banner Button -->
    <RelativeLayout
        android:id="@+id/rlWordSchedule"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@id/searchBar"
        android:layout_margin="18dp"
        android:background="@drawable/bg_gradient_button"
        android:padding="16dp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        android:clipToOutline="true"
        android:orientation="horizontal">

        <!-- Decorative Icon Badge -->
        <ImageView
            android:id="@+id/imgBadge"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/schedule_badge"
            android:contentDescription="Badge"
            android:layout_marginEnd="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvWordSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/baloo"
            android:text="Custom Word Schedule"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvWordDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvWordSchedule"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/baloo"
            android:text="Plan your vocabulary learning journey with ease."
            android:textColor="@color/navyBlue"
            android:textSize="16sp" />

        <!-- Decorative Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="@color/white"
            android:alpha="0.3" />
    </RelativeLayout>


    <!-- RecyclerView for Search Results -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSearchResults"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="0dp"
        android:elevation="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_search_bar"
        android:visibility="gone" />

