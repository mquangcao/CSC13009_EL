<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".app.presentation.fragment.WordQuestionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">



        <Button
            android:id="@+id/tv_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banana"
            android:background="#00000000"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:fontFamily="@font/bungee"
            android:layout_marginTop="0dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:id="@+id/rv_word"
            android:layout_below="@+id/tv_word"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_check_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#EDC806"
            android:fontFamily="@font/bungee"
            android:padding="16dp"
            android:text="Check Answer"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/search_check_2_24px"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:iconTint="@color/white" />
    </RelativeLayout>

</FrameLayout>