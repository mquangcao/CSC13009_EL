<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.presentation.fragment.GameSessionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/game_result_header_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_on_primary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/baseline_arrow_back_ios_new_24">

            <TextView
                android:id="@+id/game_session_header_tb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="High Score: 99999"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_marginEnd="6dp"/>

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/game_score_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:text="9999"
            android:textAlignment="center"
            android:textSize="32sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/game_canvas_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp">

        </FrameLayout>


    </LinearLayout>

</FrameLayout>