<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.presentation.fragment.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >

       <LinearLayout
           android:layout_marginTop="16dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <!-- ImageView Background với bo góc -->
           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:layout_marginStart="16dp"
                   android:layout_marginEnd="16dp"
                   android:scaleType="centerCrop"
                   android:src="@drawable/card_background"
                   android:background="@drawable/rounded_background"
                   android:clipToOutline="true"
                   android:layout_marginTop="30dp"/>


               <!-- Card Content -->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_margin="16dp"
                   android:padding="16dp"
                   android:elevation="8dp">

                   <!-- Title -->
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="WORD FOR TODAY"
                       android:textSize="20sp"
                       android:textStyle="bold"
                       android:textColor="#000000"
                       android:fontFamily="@font/baloo"
                       android:layout_marginBottom="4dp"
                       android:layout_marginTop="30dp"/>

                   <!-- Từ vựng được gợi ý -->
                   <TextView
                       android:id="@+id/tvWord"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Serendipity"
                       android:fontFamily="@font/baloo"
                       android:textSize="36sp"
                       android:textStyle="bold"
                       android:textColor="#0E3A53"
                       android:layout_marginBottom="4dp" />

                   <!-- Phát âm -->
                   <TextView
                       android:id="@+id/tvPronunciation"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="/\u02ccs\u025br\u0259n\u02c8d\u026ap\u0259di/"
                       android:textSize="18sp"
                       android:textColor="#808080"
                       android:layout_marginBottom="4dp" />

                   <TextView
                       android:layout_marginTop="90dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                          android:text="Ngày hôm nay của bạn:"
                       android:fontFamily="@font/baloo"
                       android:textSize="24sp"
                       android:textColor="@color/black"/>

                   <LinearLayout
                       android:layout_marginTop="16dp"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:padding="0dp"
                       android:layout_marginEnd="-10dp"
                       >

                       <RelativeLayout


                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                           <com.mikhaellopez.circularprogressbar.CircularProgressBar
                               android:id="@+id/circularProgressBar"
                               android:layout_width="75dp"
                               android:layout_height="75dp"
                               app:cpb_background_progressbar_color="#b6bbd8"
                               app:cpb_background_progressbar_width="13dp"
                               app:cpb_progress_direction="to_right"
                               app:cpb_progressbar_color="#FC8890"
                               app:cpb_progressbar_width="12dp"
                               app:cpb_round_border="true"
                               app:cpb_progress="70"
                               app:cpb_progress_max="100"
                               android:layout_centerInParent="true"
                               app:cpb_progressbar_color_end="#FC8890"
                               app:cpb_background_progressbar_color_start="#EAEAEA"
                               app:cpb_background_progressbar_color_direction="top_to_bottom"
                               />

                           <com.mikhaellopez.circularprogressbar.CircularProgressBar
                               android:id="@+id/circularProgressBar2"
                               android:layout_width="120dp"
                               android:layout_height="120dp"
                               app:cpb_background_progressbar_color="#b6bbd8"
                               app:cpb_background_progressbar_width="17dp"
                               app:cpb_progress_direction="to_right"
                               app:cpb_progressbar_color="#CEB7D4"
                               app:cpb_progressbar_width="16dp"
                               app:cpb_round_border="true"
                               app:cpb_progress="33"
                               app:cpb_progress_max="100"
                               android:layout_centerInParent="true"
                               app:cpb_progressbar_color_end="#CEB7D4"
                               app:cpb_background_progressbar_color_start="#EAEAEA"
                               app:cpb_background_progressbar_color_direction="top_to_bottom"
                               />

                           <com.mikhaellopez.circularprogressbar.CircularProgressBar
                               android:id="@+id/circularProgressBar3"
                               android:layout_width="180dp"
                               android:layout_height="180dp"
                               app:cpb_background_progressbar_color="#b6bbd8"
                               app:cpb_background_progressbar_width="24dp"
                               app:cpb_progress_direction="to_right"
                               app:cpb_progressbar_color="#0EADD2"
                               app:cpb_progressbar_width="23dp"
                               app:cpb_round_border="true"
                               app:cpb_progress="90"
                               app:cpb_progress_max="100"
                               android:layout_centerInParent="true"
                               app:cpb_progressbar_color_end="#0EADD2"
                               app:cpb_background_progressbar_color_start="#EAEAEA"
                               app:cpb_background_progressbar_color_direction="top_to_bottom"
                               />


                       </RelativeLayout>

                       <LinearLayout
                           android:layout_marginStart="20dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">

                           <RelativeLayout
                               android:layout_marginTop="12dp"
                               android:layout_marginEnd="24dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">
                               <ImageView
                                   android:id="@+id/imgWord"
                                   android:layout_width="3dp"
                                   android:layout_height="35dp"
                                   android:background="#FC8890"/>
                                 <TextView
                                        android:id="@+id/tvWord1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="18dp"
                                        android:text="Vocab"
                                        android:textSize="16sp"

                                        android:layout_marginStart="8dp"
                                        android:layout_below="@id/imgWord"
                                        android:fontFamily="@font/baloo"
                                        android:textColor="@color/black"
                                        android:layout_alignParentTop="true"
                                        android:layout_toRightOf="@+id/imgWord"/>
                                     />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="70% success vocab"
                                    android:textSize="8sp"
                                    android:layout_below="@+id/tvWord1"
                                    android:layout_marginStart="12dp"
                                    android:fontFamily="@font/baloo"/>



                           </RelativeLayout>
                           <RelativeLayout
                               android:layout_marginTop="20dp"
                               android:layout_marginEnd="24dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
                               <ImageView
                                   android:id="@+id/imgWord2"
                                   android:layout_width="3dp"
                                   android:layout_height="35dp"
                                   android:background="#CEB7D4"/>
                               <TextView
                                   android:id="@+id/tvWord2"
                                   android:layout_width="wrap_content"
                                   android:layout_height="18dp"
                                   android:text="Listening"
                                   android:textSize="16sp"

                                   android:layout_marginStart="8dp"
                                   android:layout_below="@id/imgWord2"
                                   android:fontFamily="@font/baloo"
                                   android:textColor="@color/black"
                                   android:layout_alignParentTop="true"
                                   android:layout_toRightOf="@+id/imgWord2"/>
                               />

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="33% success vocab"
                                   android:textSize="8sp"
                                   android:layout_below="@+id/tvWord2"
                                   android:layout_marginStart="12dp"
                                   android:fontFamily="@font/baloo"/>



                           </RelativeLayout>
                           <RelativeLayout
                               android:layout_marginTop="20dp"
                               android:layout_marginEnd="24dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
                               <ImageView
                                   android:id="@+id/imgWord3"
                                   android:layout_width="3dp"
                                   android:layout_height="35dp"
                                   android:background="#0EADD2"/>
                               <TextView
                                   android:id="@+id/tvWord3"
                                   android:layout_width="wrap_content"
                                   android:layout_height="18dp"
                                   android:text="Grammar"
                                   android:textSize="16sp"

                                   android:layout_marginStart="8dp"
                                   android:layout_below="@id/imgWord3"
                                   android:fontFamily="@font/baloo"
                                   android:textColor="@color/black"
                                   android:layout_alignParentTop="true"
                                   android:layout_toRightOf="@+id/imgWord3"/>
                               />

                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="90% success vocab"
                                   android:textSize="8sp"
                                   android:layout_below="@+id/tvWord3"
                                   android:layout_marginStart="12dp"
                                   android:fontFamily="@font/baloo"/>



                           </RelativeLayout>


                       </LinearLayout>


                   </LinearLayout>


                   <FrameLayout
                       android:id="@+id/fragmentContainer"
                       android:layout_marginTop="35dp"

                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>
               </LinearLayout>

           </FrameLayout>

           <!-- Container cho StatisticsFragment -->

       </LinearLayout>

   </ScrollView>


</FrameLayout>

