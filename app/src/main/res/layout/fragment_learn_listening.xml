<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/learn_question_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="a"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="32dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="79dp"
                android:layout_height="71dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_learn_4" />


            <com.android_ai.csc13009.app.utils.ChatBubbleView
                android:id="@+id/chatBubbleView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.437"
                app:layout_constraintStart_toEndOf="@+id/imageView12"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">


            </com.android_ai.csc13009.app.utils.ChatBubbleView>

            <ImageButton
                android:id="@+id/learn_question_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_semi_transparent_background"
                app:layout_constraintBottom_toBottomOf="@+id/chatBubbleView"
                app:layout_constraintStart_toStartOf="@+id/chatBubbleView"
                app:layout_constraintTop_toTopOf="@+id/chatBubbleView"
                app:srcCompat="@drawable/ic_sound"
                app:tint="@color/greenPrimary" />

            <ProgressBar
                android:id="@+id/game_session_question_content_extra"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="64dp"
                android:layout_weight="1"
                android:foregroundTint="@color/greenPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/learn_question_content"
                app:layout_constraintEnd_toEndOf="@+id/chatBubbleView"
                app:layout_constraintStart_toEndOf="@+id/learn_question_content"
                app:layout_constraintTop_toTopOf="@+id/learn_question_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:padding="32dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_check_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="#EDC806"
            android:fontFamily="@font/bungee"
            android:padding="16dp"
            android:text="Check Answer"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:cornerRadius="12dp"
            app:icon="@drawable/search_check_2_24px"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>