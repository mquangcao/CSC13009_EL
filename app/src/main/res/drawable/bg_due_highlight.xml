<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background for contrast -->
        </shape>
    </item>
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFF3E0" /> <!-- Light orange for subtle highlight -->
            <stroke android:width="3dp" android:color="#FF5252" /> <!-- Bright red border -->
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>
