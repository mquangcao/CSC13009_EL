<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp viền ngoài -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Nền trong suốt -->
            <stroke
                android:width="2dp"
            android:color="@color/white" />
            <corners android:radius="16dp" /> <!-- Góc bo tròn của viền -->
        </shape>
    </item>

    <!-- Lớp nền bên trong -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_background" /> <!-- Màu nền bên trong -->
            <corners android:radius="14dp" /> <!-- Góc bo tròn của nền -->
        </shape>
    </item>
</layer-list>
